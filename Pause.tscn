var paused = false
var music_recall
var title_menu = \"res://title_menu.tscn\"
var main = \"res://main.tscn\"
@onready var game_options = $\"MarginContainer/VBoxContainer/Game Difficulty\"
@onready var music_audio_options = $MarginContainer/VBoxContainer/Music_Slider



# Called when the node enters the scene tree for the first time.
