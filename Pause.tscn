func _unhandled_input(event):
	if Input.is_action_just_pressed(\"ui_cancel\"):
		pause_game()


func pause_game():
	var dark = $\"../Pause Fade\"
	var pause_menu = $\".\"
	if not paused:
		music_recall = Music.stream_paused
		Music.stream_paused = true
		dark.visible = true
		pause_menu.visible = true
		Engine.time_scale = 0
		get_tree().paused = true
		visible = true

		game_options.visible = false
		music_audio_options.visible = false

	else:
		Music.stream_paused = music_recall
		dark.visible = false
		Engine.time_scale = 1
		get_tree().paused = false
		visible = false
		print('resumed')
	paused = !paused
	

func _on_restart_game_pressed():
	pause_game()
	get_tree().reload_current_scene()
	

func _on_audio_options_pressed():
	music_audio_options.visible = !music_audio_options.visible
	pass # Replace with function body.


func _on_return_to_title_pressed():
	pause_game()
	get_tree().change_scene_to_packed(load(title_menu))


func _on_quit_to_desktop_pressed():
	get_tree().quit()


func _on_game_options_pressed():
	game_options.visible = !game_options.visible
	pass # Replace with function body.


